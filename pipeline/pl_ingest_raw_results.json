{
	"name": "pl_ingest_raw_results",
	"properties": {
		"activities": [
			{
				"name": "web_ingest_raw_results",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "GET",
					"url": "https://ergast.com/api/f1/races.json?limit=1500"
				}
			},
			{
				"name": "for_each_season",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "web_ingest_raw_results",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('web_ingest_raw_results').output.MRData.RaceTable.Races",
						"type": "Expression"
					},
					"batchCount": 10,
					"activities": [
						{
							"name": "Web_ingest_raw_",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "GET",
								"url": {
									"value": "@concat('https://ergast.com/api/f1/',item().season,'/',item().round,'/results.json')",
									"type": "Expression"
								}
							}
						},
						{
							"name": "v_web_op",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Web_ingest_raw_",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "web_output",
								"value": {
									"value": "@{activity('Web_ingest_raw_').output}",
									"type": "Expression"
								}
							}
						},
						{
							"name": "copy_data_raw_results",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "v_web_op",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "DelimitedTextSource",
									"additionalColumns": [
										{
											"name": "my_column",
											"value": {
												"value": "@variables('web_output')",
												"type": "Expression"
											}
										}
									],
									"storeSettings": {
										"type": "AzureBlobFSReadSettings",
										"recursive": true,
										"enablePartitionDiscovery": false
									},
									"formatSettings": {
										"type": "DelimitedTextReadSettings"
									}
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSettings",
										"quoteAllText": true,
										"fileExtension": ".txt"
									}
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"mappings": [
										{
											"source": {
												"name": "my_column",
												"type": "String"
											},
											"sink": {
												"type": "String",
												"physicalType": "String",
												"ordinal": 1
											}
										}
									],
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "ds_ingest_text_data",
									"type": "DatasetReference"
								}
							],
							"outputs": [
								{
									"referenceName": "ds_ingest_raw_results",
									"type": "DatasetReference",
									"parameters": {
										"season": {
											"value": "@item().season",
											"type": "Expression"
										},
										"round": {
											"value": "@item().round",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"variables": {
			"web_output": {
				"type": "String"
			}
		},
		"folder": {
			"name": "Formula_one_project/ingest_raw_data"
		},
		"annotations": []
	}
}